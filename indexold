<script>
    async function injectPeacebonds() {
        const amount = document.getElementById('pb-amount').value;
        const status = document.getElementById('tx-status');
        
        if(!amount || amount <= 0) return;

        status.innerHTML = "INIZIALIZZAZIONE: Richiesta firme Mitterer-Vinatzer-Zuegg...";
        status.style.color = "#d4af37";

        // Simulazione validazione Triple-Sign IPFS
        setTimeout(() => {
            status.innerHTML = "VALIDAZIONE: Hash IPFS verificato (bafybeihannes...).";
            setTimeout(() => {
                status.innerHTML = `SUCCESSO: ${amount} Peacebonds emessi. Sincronizzato con 0.043 Hz.`;
                status.style.color = "#00ff00";
                
                // Log nel terminale
                const logLine = document.createElement('div');
                logLine.innerHTML = `[${new Date().toLocaleTimeString()}] TX_SUCCESS: ${amount} PB injected into Resonance School Wallet.`;
                document.getElementById('console').appendChild(logLine);
            }, 1500);
        }, 1500);
    }
</script> import React, { useState, useEffect } from 'react';
import { Shield, Lock, Radio, Database, Users, ArrowDown, Activity, CheckCircle2 } from 'lucide-react';

const App = () => {
  const [activeStep, setActiveStep] = useState(0);
  const [cycleProgress, setCycleProgress] = useState(0);

  // Simulation des 23-Sekunden-Zyklus (0.043 Hz)
  useEffect(() => {
    const interval = setInterval(() => {
      setCycleProgress((prev) => (prev >= 100 ? 0 : prev + 1));
    }, 230); // 100 Schritte in ~23 Sek

    return () => clearInterval(interval);
  }, []);

  const steps = [
    { id: 'framework', title: 'Framework Euystacio', icon: <Activity className="w-5 h-5" />, desc: 'Entscheidungslogik & Overrides' },
    { id: 'cid', title: 'CID / IPFS', icon: <Database className="w-5 h-5" />, desc: 'Unveränderliches Dokument' },
    { id: 'signers', title: 'Triple-Sig Validation', icon: <Users className="w-5 h-5" />, desc: 'Mitterer | Vinatzer | Zuegg' },
    { id: 'status', title: 'Status Locked', icon: <Lock className="w-5 h-5" />, desc: 'Verifizierter Endzustand' },
    { id: 'freq', title: '0.043 Hz Pulse', icon: <Radio className="w-5 h-5" />, desc: '23s Kontrollzyklus' }
  ];

  return (
    <div className="min-h-screen bg-[#050505] text-stone-300 font-sans p-4 md:p-8">
      <div className="max-w-4xl mx-auto">
        <header className="mb-12 border-l-2 border-amber-500 pl-6">
          <h1 className="text-3xl font-serif font-bold text-white tracking-tight italic">TRUST MACHINE</h1>
          <p className="text-xs font-mono text-stone-500 uppercase tracking-widest mt-1">
            Circle of Accountability // Resonance School
          </p>
        </header>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          {/* Diagram Area */}
          <div className="relative space-y-4">
            {steps.map((step, idx) => (
              <div key={step.id} className="relative">
                <div 
                  className={`p-4 rounded-xl border transition-all duration-500 flex items-center gap-4 ${
                    activeStep === idx 
                    ? 'bg-amber-500/10 border-amber-500 text-white shadow-[0_0_20px_rgba(212,175,55,0.1)]' 
                    : 'bg-stone-900/50 border-stone-800 opacity-60'
                  }`}
                  onMouseEnter={() => setActiveStep(idx)}
                >
                  <div className={`${activeStep === idx ? 'text-amber-500' : 'text-stone-600'}`}>
                    {step.icon}
                  </div>
                  <div>
                    <h3 className="text-sm font-bold font-mono uppercase">{step.title}</h3>
                    <p className="text-[10px] text-stone-500">{step.desc}</p>
                  </div>
                  {activeStep === idx && <CheckCircle2 className="ml-auto w-4 h-4 text-teal-500" />}
                </div>
                {idx < steps.length - 1 && (
                  <div className="flex justify-center py-2">
                    <ArrowDown className="w-4 h-4 text-stone-800" />
                  </div>
                )}
              </div>
            ))}
          </div>

          {/* Explanation Area */}
          <div className="space-y-8 bg-stone-900/20 p-8 rounded-2xl border border-stone-800">
            <div>
              <h2 className="text-amber-500 font-serif italic text-xl mb-4">Interaktive Analyse</h2>
              <div className="space-y-4 font-mono text-[11px] leading-relaxed">
                <div className="p-3 bg-black/40 rounded border-l-2 border-teal-500">
                  <span className="text-teal-500">DEVS:</span> State machine with content-addressed immutability. No single point of failure.
                </div>
                <div className="p-3 bg-black/40 rounded border-l-2 border-amber-500">
                  <span className="text-amber-500">NON-DEVS:</span> Ein Gesetz auf fälschungssicherem Papier, das 3 Unterschriften braucht.
                </div>
                <div className="p-3 bg-black/40 rounded border-l-2 border-white">
                  <span className="text-white">INVESTORS:</span> Trust fund with 3 independent auditors. Deliberate, fraud-proof cycles.
                </div>
              </div>
            </div>

            <div className="pt-6 border-t border-stone-800">
              <div className="flex justify-between items-end mb-2">
                <span className="text-[10px] font-mono text-stone-500 uppercase tracking-widest">Global Heartbeat (0.043 Hz)</span>
                <span className="text-xs font-mono text-amber-500">Cycle: {Math.floor(cycleProgress / 4)}s / 23s</span>
              </div>
              <div className="h-1.5 bg-stone-800 rounded-full overflow-hidden">
                <div 
                  className="h-full bg-amber-500 transition-all duration-300"
                  style={{ width: `${cycleProgress}%` }}
                />
              </div>
            </div>
          </div>
        </div>

        <footer className="mt-16 text-center">
          <p className="font-serif text-xl text-stone-500 italic opacity-50">Nothing is final. ❤️</p>
          <div className="mt-4 text-[9px] font-mono text-stone-700 uppercase tracking-[0.4em]">
            Bolzano-71 Security Infrastructure
          </div>
        </footer>
      </div>
    </div>
  );
};

export default App;
