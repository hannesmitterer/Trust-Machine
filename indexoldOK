<script>
    const canvas = document.getElementById('oscillator');
    const ctx = canvas.getContext('2d');
    let offset = 0;

    function draw() {
        canvas.width = canvas.offsetWidth;
        canvas.height = canvas.offsetHeight;
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.strokeStyle = '#d4af37';
        ctx.lineWidth = 2;
        ctx.beginPath();
        for (let x = 0; x < canvas.width; x++) {
            const y = canvas.height/2 + Math.sin(x * 0.02 + offset) * 30;
            if (x === 0) ctx.moveTo(x, y);
            else ctx.lineTo(x, y);
        }
        ctx.stroke();
        offset += 0.043; // Euystacio Constant
        requestAnimationFrame(draw);
    }
    draw();

    function syncWallet() {
        addLog("API Request sent to Backend...");
        setTimeout(() => {
            addLog("Success: Wallet synchronized with IPFS CID.");
            document.getElementById('pb-val').innerHTML = "1,043.26";
        }, 1500);
    }

    function injectPeacebonds() {
        addLog("VETO CHECK: Validation H. Mitterer...");
        setTimeout(() => {
            addLog("TRIPLE-SIGN CHECK: Dieter Zuegg Signature verified.");
            addLog("RESONANCE INJECTION: +1 Peacebond created (0.043 Hz logic).");
        }, 2000);
    }

    function addLog(msg) {
        const log = document.getElementById('log');
        log.innerHTML += `<br>[${new Date().toLocaleTimeString()}] ${msg}`;
        log.scrollTop = log.scrollHeight;
    }
</script>

